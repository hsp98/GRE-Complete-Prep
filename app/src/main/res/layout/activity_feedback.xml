<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundimage"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mega.GRE.examination.Feedback"
    android:weightSum="1">


    <TextView
        android:text="Please provide your valuable feedback and we will use those to make your learning experience more swift and easier."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewback"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"

        android:textColor="#ffe766"
        android:id="@+id/textView9" />
    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColorHint="#ffe766"
        android:textSize="19dp"
        android:hint="Enter your feedback here...."
        android:padding="16dp"
        android:gravity="center"

        android:background="@drawable/textviewback"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:text="Send Feedback"
        android:textColor="#fffcb7"
        android:textStyle="bold"
        android:background="@drawable/buttonback"
        android:id="@+id/button16"
        android:layout_margin="@dimen/activity_vertical_margin"

        android:layout_gravity="center_horizontal"
        />


</LinearLayout>
