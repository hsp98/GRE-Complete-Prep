<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/comeonman"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_home"
    android:background="@drawable/backgroundimage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mega.GRE.examination.Home"
    tools:showIn="@layout/app_bar_home"
    android:weightSum="1">




    <TextView
        android:text="@string/aboutapp"
        android:layout_width="match_parent"

android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/backgroundimage"

        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="300dp"
        android:id="@+id/textView2"
        android:layout_weight="0.07" />

    <Button
        android:id="@+id/button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:layout_weight="0.2"
        android:background="@drawable/buttonback"
        android:text="Start learning now"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
android:layout_marginTop="10dp"

        android:background="@drawable/buttonback"
        android:text="View University Vault"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/demo"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="fill_parent"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@drawable/buttonback"
        android:text="View demo video now"
        android:textColor="#ffffff" />


</LinearLayout>
</ScrollView>