<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/login_form100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/backgroundimage"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="mega.GRE.examination.Quantnumericscroll8">

        <TextView
            android:id="@+id/textView147"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#fffcb7"
            android:textSize="19dp"
            android:text="A rectangle has a length that is one third of its perimeter. The perimeter is 150 meters. What is the area of the rectangle?"
            android:padding="16dp"
            android:gravity="center"
            android:textStyle="bold"

            android:background="@drawable/textviewback"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/edittext147"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColorHint="#fffcb7"
            android:textSize="19dp"
            android:hint="Enter area of rectangle here"
            android:padding="16dp"
            android:gravity="center"
android:inputType="number"
            android:background="@drawable/textviewback"
            android:layout_marginTop="20dp"/>


        <Button
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textColor="#fffcb7"
            android:textStyle="bold"
            android:background="@drawable/buttonback"
            android:id="@+id/button147"
            android:layout_margin="@dimen/activity_vertical_margin"

            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>