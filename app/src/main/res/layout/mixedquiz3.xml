<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/login_form3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/backgroundimage"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="mega.GRE.examination.Mixedquiz3">

        <TextView
            android:id="@+id/textView606"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#fffcb7"
            android:textSize="19dp"
            android:text="The list price of a television set is t dollars."
            android:padding="16dp"
            android:gravity="center"
            android:textStyle="bold"

            android:background="@drawable/textviewback"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textView607"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#fffcb7"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="A=The price of the TV in a sale offering a 15 percent discount."
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textviewback"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textView608"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#fffcb7"
            android:textStyle="bold"
            android:textSize="19dp"
            android:text="B=0.85t dollars"
            android:padding="16dp"
            android:gravity="center"

            android:background="@drawable/textviewback"
            android:layout_marginTop="20dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"

            android:gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/textviewback"
            android:id="@+id/r602"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A is greater"
                android:textColor="#fffcb7"
                android:textStyle="bold"
                android:id="@+id/radioButton608"
                android:layout_gravity="left"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B is greater"
                android:textColor="#fffcb7"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:id="@+id/radioButton609" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both A and B are equal"
                android:layout_gravity="left"
                android:textColor="#fffcb7"
                android:textStyle="bold"
                android:id="@+id/radioButton610" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="#fffcb7"
                android:textStyle="bold"
                android:text="Relationship cannot be determined from the information given"
                android:id="@+id/radioButton611" />
        </RadioGroup>

        <Button
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="#fffcb7"
            android:textStyle="bold"
            android:background="@drawable/buttonback"
            android:id="@+id/button602"
            android:layout_margin="@dimen/activity_vertical_margin"

            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>